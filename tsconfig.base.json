{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ht-ctrl/ui-form": ["libs/ui/form/src/index.ts"],
      "@hx-ctrl/plugin-generator": ["libs/plugin-generator/src/index.ts"],
      "@hx-ctrl/recoil-persist": ["libs/recoil-persist/src/index.ts"],
      "@hx-ctrl/theme": ["libs/theme/src/index.ts"],
      "@hx-ctrl/utils/common": ["libs/utils/common/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
